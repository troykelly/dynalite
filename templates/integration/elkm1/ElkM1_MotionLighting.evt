}

Task3()
{
	Name="Inbound Area FunctionArea Message"
	start(0x1c,FunctionArea,x,x,x,x,x)		//task is triggered on managed area changes
	Copy @0,~0,7							//copy trigger message

	LDA ~3
	CMP #RequestPresetResponse
	BRZ DIRECT_PRESET
	CMP #LinearPreset
	BRZ DIRECT_PRESET
	
	CMP #0x00
	BRZ APPLY_BANK
	CMP #0x01
	BRZ APPLY_BANK
	CMP #0x02
	BRZ APPLY_BANK
	CMP #0x03
	BRZ APPLY_BANK
	CMP #0x0A
	BRZ ADJUST_OPCODE
	CMP #0x0B
	BRZ ADJUST_OPCODE
	CMP #0x0C
	BRZ ADJUST_OPCODE
	CMP #0x0D
	BRZ ADJUST_OPCODE
	NULL				// Not interest in any other packets
	
DIRECT_PRESET:
	LDA ~2
	BRA PRESET_NUMBER
ADJUST_OPCODE:
	SUB #6      		//Adjust opcode
APPLY_BANK:
	STA ~8
	LDA ~5
	LDX #8
	MUL
	ADD ~8
PRESET_NUMBER:
	INC					//preset number is 1 Based
	
	// Check Arm State Messages
	CMP #ArmStateAway
	BRZ ARM_AWAY
	CMP #ArmStateHome
	BRZ ARM_HOME
	CMP #ArmStateDisarm
	BRZ ARM_DISARM
	
	// Check for Motion Messages
	LDX #0									//initialize counter
	CMP #Preset1Trigger
	BRZ MOTION_DETECTED
	INCX										//increment counter
	CMPX #NumberOfSensors		//Counter = number of areas in pathway?
	BRZ END									//If yes, jump out of task
	CMP #Preset2Trigger
	BRZ MOTION_DETECTED
	INCX										//increment counter
	CMPX #NumberOfSensors		//Counter = number of areas in pathway?
	BRZ END									//If yes, jump out of task
	CMP #Preset3Trigger
	BRZ MOTION_DETECTED
	INCX										//increment counter
	CMPX #NumberOfSensors		//Counter = number of areas in pathway?
	BRZ END									//If yes, jump out of task
	CMP #Preset4Trigger
	BRZ MOTION_DETECTED
	INCX										//increment counter
	CMPX #NumberOfSensors		//Counter = number of areas in pathway?
	BRZ END									//If yes, jump out of task
	CMP #Preset5Trigger
	BRZ MOTION_DETECTED
	INCX										//increment counter
	CMPX #NumberOfSensors		//Counter = number of areas in pathway?
	BRZ END									//If yes, jump out of task
	CMP #Preset6Trigger
	BRZ MOTION_DETECTED
	INCX										//increment counter
	CMPX #NumberOfSensors		//Counter = number of areas in pathway?
	BRZ END									//If yes, jump out of task
	CMP #Preset7Trigger
	BRZ MOTION_DETECTED
	INCX										//increment counter
	CMPX #NumberOfSensors		//Counter = number of areas in pathway?
	BRZ END									//If yes, jump out of task
	CMP #Preset8Trigger
	BRZ MOTION_DETECTED
	INCX										//increment counter
	CMPX #NumberOfSensors		//Counter = number of areas in pathway?
	BRZ END									//If yes, jump out of task
	CMP #Preset9Trigger
	BRZ MOTION_DETECTED
	INCX										//increment counter
	CMPX #NumberOfSensors		//Counter = number of areas in pathway?
	BRZ END									//If yes, jump out of task
	CMP #Preset10Trigger
	BRZ MOTION_DETECTED
	NULL
	
ARM_AWAY:
	LDA ~11
	CMP #AreaArmedAway
	BRZ END
	LDA #0
	STA ~13			// Reset area overide when changing arming state
	LDA #AreaArmedAway
	STA ~11
	Canceltask(5)
	Starttask(5)
	NULL
	
ARM_HOME:
	LDA ~11
	CMP #AreaArmedHome
	BRZ END
	LDA #0
	STA ~13			// Reset area overide when changing arming state
	LDA #AreaArmedHome
	STA ~11
	Canceltask(5)
	Starttask(5)
	NULL

ARM_DISARM:
	LDA ~11
	CMP #AreaDisarmed
	BRZ END
	LDA #0
	STA ~13			// Reset area overide when changing arming state
	LDA #AreaDisarmed
	STA ~11
	Canceltask(5)
	Starttask(5)
	NULL
	
MOTION_DETECTED:
	LDA #DayMotionTrack
	CMP #1				// Do we track motion during the day
	BRZ PROCESS_MOTION
	LDA ~10
	CMP #1				// Is it night
	BRZ PROCESS_MOTION
	BRA END				// Ignore motion event
PROCESS_MOTION:
	LDA ~12
	CMP #1
	BRZ DELAY_MOTION
	LDA #1
	STA ~12
	Canceltask(5)
	Starttask(5)
DELAY_MOTION:
	Canceltask(6)
	Starttask(6)
	NULL

END:
	NULL
}

